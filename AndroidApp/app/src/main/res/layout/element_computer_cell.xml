<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/element_computer_cell_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/element_computer_cell_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="@+id/element_computer_cell_photo"
                app:layout_constraintStart_toStartOf="@+id/element_computer_cell_photo"
                app:layout_constraintTop_toBottomOf="@+id/element_computer_cell_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/element_computer_cell_text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintStart_toStartOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintTop_toBottomOf="@+id/element_computer_cell_text_name" />

                <TextView
                    android:id="@+id/element_computer_cell_text_year_author_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintStart_toStartOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintTop_toBottomOf="@+id/element_computer_cell_text_name" />

                <TextView
                    android:id="@+id/element_computer_cell_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    app:layout_constraintEnd_toEndOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintStart_toStartOf="@+id/element_computer_cell_text_name"
                    app:layout_constraintTop_toBottomOf="@+id/element_computer_cell_text_name" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>